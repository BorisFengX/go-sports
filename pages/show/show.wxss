/* pages/show/show.wxss */
.container {
  width: 100%;
  height: 100%;
  padding: 0;
}

.banner {
  width: 100%;
  height: 200px;
  background-size: cover;
  background-position: center;
}

.event-info {
  margin: -40px 20px 50px 20px;
  border-radius: 10px;
  background-color: rgba(255,255,255,0.5);
}

.card-shadow {
  box-shadow: 0 4px 4px rgba(0,0,0,0.2);
  margin-bottom: 5px;
  border-radius: 5px;
}

.category-row {
  width: 100%;
  height: 40px;
}

.event-intro {
  width: 100%;
}