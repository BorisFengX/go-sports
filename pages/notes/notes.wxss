/* pages/notes/notes.wxss */
.container {
  padding: 10px;
  width: 100%;
  height: 100%;
}

.header {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.title-box {
  display: flex;
  align-items: center;
}

.unread-number {
  margin-left: 5px;
}

.border-round {
  border-radius: 50%;
  width: 25px;
  height: 25px;
  text-align: center;
}

.color-primary {
  background-color: #ea5455;
  color: white;
}

.border-top {
  margin-top: 10px;
  border-top: 2px solid rgb(240,240,240);
}

.notes {
  width: 100%;
  padding: 20px 10px;
}

.msg-card {
  padding: 5px 10px;
  width: 100% - 10px;
  margin-bottom: 15px;
}

.msg-title {
  width: 95%;
  border-bottom: 1px solid rgb(240,240,240);
  display: flex;
  align-items: center;
}

.read-all {
  display: flex;
  align-items: center;
}

.msg-body {
  width: 95%;
}

.read {
  background-color: rgb(240,240,240);
}

.unread {
  box-shadow: 0 0 10px rgba(0,0,0,0.3);
}

.unread-dot {
  width: 10px;
  height: 10px;
  margin-right: 10px;
}

.font-title {
  font-size: 18px;
}

.font-content {
  font-size: 14px;
}

.font-grey {
  color: rgb(140,140,140);
}

.font-bold {
  font-weight: bold;
}

.line-limited {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.icon {
  width: 25px;
  height: 25px;
}