/* pages/new/new.wxss */
.h2-header {
 color: black;
  font-size: 50rpx;
  font-weight: bold;
  padding: 10px;
}
/* Avatar */
.userinfo-avatar {
  width:180rpx;
  height:180rpx;
  margin:20rpx;
  border-radius:50%;
}

/* form style */
.user-input {
  width: 100%;
  margin-bottom: 35rpx;
}
.input-height {
  height: 10em;
}
.input-label {
  font-size: 35rpx;
}
textarea {
  padding: 10rpx 0;
  font-size: 35rpx;
  width: 100%;
}
.text-area-wrap {
  padding: 15rpx 15rpx;
  background-color: rgb(240,240,240);
  margin-top:8px;
  border-radius: 2px;
  border-left: 5px solid #9F9F9C;
}

.banner {
  color: white;
  text-align: center;
  height: 50px;
  /* if you have a 70px navbar => height: calc(100vh - 70px); */
  background-size: cover !important;
  display: flex;
  align-items: center;
  justify-content: center;
}
.banner h1 {
  font-size: 30px;
  font-weight: bold;
  text-shadow: 0px 1px rgba(0, 0, 0, 0.2);
}
.banner p {
  font-size: 25px;
  font-weight: lighter;
  color: rgb(255, 255, 255);
  opacity: 0.6;
  margin-bottom: 30px;
}
.section {
  display: flex;
  justify-content: space-around;
  align-items: center
}
.squre-input {
  height:  50px;
  width: 100px;
  text-align: center;
  margin: 10px 0;
  border-radius: 5px;
  background-color: rgb(240,240,240);
  background-position: center;
  background-size: cover
}

.photo-container {
  width: 100%;
  height:  200px;
  background-color: rgb(201, 201, 199);
  text-align: center;
  color: #9F9F9C;
  background-position: center;
  background-size: cover;
  background-repeat:no-repeat;
  display: flex;
  align-items: center;
  justify-content: space-around

}

/* pages/picker/picker.wxss */
.tui-picker-content{
  padding: 30rpx;
  width: 40%;
  text-align: center;
  color: rgb(70,70,70);
  background-color: rgb(240,240,240)
}
.tui-picker-name{
  height: 80rpx;
  line-height: 80rpx;
}
.tui-picker-detail{
  height: 80rpx;
  width: 90%;
  line-height: 80rpx;
  background-color: rgb(240,240,240);
  font-size: 20rpx;
  padding: 0;
  overflow: hidden;
}
.user-input-2{
  display: flex;
  align-items: center;
  justify-content: space-between
}
.text-area-wrap-2 {
  padding: 15rpx 15rpx;
  background-color: rgb(240,240,240);
  margin-top:8px;
  border-radius: 2px;
  border-left: 5px solid #9F9F9C;
  width: 90%
}

.btn {
  background-color: #ea5455;
  color: white;
  margin: 0;
}
.warning{
  background-color: #f89d26;
}

.card-shadow {
  box-shadow: 0 4px 4px rgba(0,0,0,0.2);
  margin-bottom: 5px;
  border-radius: 5px;
  margin: 15px 10px;
}

.map{
  width: 15px;
  height: 20px;
}
.timepicker{
  font-size: 16px;
  padding:0;
  margin:0
}
.picker-extend {
  height: 100%;
  width: 100%
}
